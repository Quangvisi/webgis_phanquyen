<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        List User
    </title>
    <%- include('include/_header'); -%>


<body>
    <div class="container">
        <!-- chuyển JSON sang dạng string -->
        <!-- <div class="">
            <% userList.forEach(function(item,index){ %>
                <div>
                    <%= JSON.stringify(item) %> 
                </div>
                <% }) %>
        </div> -->
        <div class="row">
            <div class="user-info-container">
                <form method="POST" action="/users/create-user">
                    <div class="container">
                        <div class="mt-3">
                            <h3>Tạo tài khoản mới:</h3>
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input name="email" type="email" class="form-control" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input name="password" type="password" class="form-control" id="password" required>
                        </div>
                        <div class="form-group">
                            <label for="username">username</label>
                            <input name="username" type="text" class="form-control" id="username" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="table-users mt-3">
                <h3>Bảng người dùng:</h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Username</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%= item.id %>
                                </th>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <form style="display: inline;" action="/update-user/<%= item.id %>" method="POST">
                                        <button type="button" class="btn btn-warning">Sửa</button>
                                    </form>
                                    <form style="display: inline;" action="/delete-user/<%= item.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger">Xóa</button>
                                    </form>

                                </td>
                                <% }) %>

                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>




    <%- include('include/_footer'); -%>

</body>

</html>